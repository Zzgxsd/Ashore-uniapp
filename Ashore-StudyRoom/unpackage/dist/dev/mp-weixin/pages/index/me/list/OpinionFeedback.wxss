
.body {
	min-height: 95vh;
	background-color: #f5f5f5;
}
.opinion {
	width: 90%;
	margin: 0 auto;
	padding-top: 20rpx;
	display: flex;
	flex-direction: column;
}
.opinion>textarea {
	border: 0;
	border-radius: 10px 10px 0 0;
	width: 98.5%;
	height: 80px;
	padding: 5px 0 0 5px;
	outline: none;
}
.opinion>.cpu {
	width: 100%;
	font-size: small;
	display: flex;
	justify-content: end;
	background-color: #ffffff;
}
.cpu>._span {
	margin-right: 10px;
}
.opinion>.picture {
	width: 100%;
	height: 120px;
	display: flex;
	justify-content: start;
	background-color: #ffffff;
}
.picture>.send {
	width: 80px;
	height: 80px;
	margin: 20px 0 10px 10px;
	background: #f2f2f2;
}
.opinion>button {
	outline: none;
	width: 90%;
	height: 30px;
	line-height: 30px;
	margin: 25px auto;
	border-radius: 10px;
	border: 0;
	color: #ffffff;
	background: #cccccc;
}

